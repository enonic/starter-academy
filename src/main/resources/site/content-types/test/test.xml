<content-type>
    <display-name>Artikkel</display-name>
    <description>Generelle artikler</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Hovedfelt">
            <label>Hovedfelt</label>
            <items>
                <input name="listheading" type="TextLine">
                    <label>Listeoverskrift</label>
                    <custom-text>contentdata/listheading</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="subheading" type="TextLine">
                    <label>Undertittel</label>
                    <custom-text>contentdata/subheading</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="author-relatedcontent" type="ContentSelector">
                    <label>Skrevet av</label>
                    <custom-text>contentdata/author-relatedcontent</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="author" type="TextLine">
                    <label>Skrevet av (egendefinert)</label>
                    <custom-text>contentdata/author</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="photo" type="TextLine">
                    <label>Fotograf</label>
                    <custom-text>contentdata/photo</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="hide-publishinfo" type="CheckBox">
                    <label>Skjul publiseringsinfo</label>
                    <custom-text>contentdata/hide-publishinfo</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="teaserimage" type="ImageSelector">
                    <label>Bilde i listevisning/sirkler</label>
                    <custom-text>contentdata/teaserimage</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="teaseringress" type="TextArea">
                    <label>Ingress i listevisning</label>
                    <custom-text>contentdata/teaseringress</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="eksternUrl" type="TextLine">
                    <label>Ekstern Url</label>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>

                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="tags" type="TextLine">
                    <label>Tags</label>
                    <custom-text>contentdata/tags</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </field-set>
        <field-set name="Kategori">
            <label>Filterkategorier</label>
            <items>
                <input name="category" type="ContentSelector">
                    <label>Kategori</label>
                    <custom-text>Kategori</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="0" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Video">
            <label>Video</label>
            <items>
                <input name="youtube" type="TextLine">
                    <label>Youtube ID</label>
                    <custom-text>contentdata/youtube</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="youtube-cover" type="ImageSelector">
                    <label>Youtube Cover</label>
                    <custom-text>contentdata/youtube-cover</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="youtube-cover-first" type="CheckBox">
                    <label>Bruk som artikkelbilde?</label>
                    <custom-text>contentdata/youtube-cover-first</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </field-set>
        <item-set name="images">
            <label>Bildegalleri</label>
            <immutable>false</immutable>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="image" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>image</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="imagecaption" type="TextLine">
                    <label>Bildetekst</label>
                    <custom-text>imagecaption</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                  <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </item-set>
        <item-set name="printmaterials">
            <label>Temahefter</label>
            <immutable>false</immutable>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="printmaterial" type="ContentSelector">
                    <label>Temahefte</label>
                    <custom-text>printmaterial</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="printmaterial-linktext" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>printmaterial-linktext</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </item-set>
        <field-set name="Gjenbrukbare faktabokser">
            <label>Gjenbrukbare faktabokser</label>
            <items>
                <input name="facts" type="ContentSelector">
                    <label>Faktabokser</label>
                    <custom-text>contentdata/facts</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="0" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set  name="newFacts">
            <label>New facts</label>
            <immutable>false</immutable>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="factHeading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/heading</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="factText" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </item-set>
        <field-set name="Relaterte lenker overskrift">
            <label>Relaterte lenker overskrift</label>
            <items>
                <input name="relatedlinks-heading" type="TextLine">
                    <label>Listeoverskrift</label>
                    <custom-text>contentdata/relatedlinks-heading</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </field-set>
        <item-set name="relatedlink">
            <label>Relaterte lenker</label>
            <immutable>false</immutable>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="relatedlink-description" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>relatedlink-description</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="relatedlink-contents" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>relatedlink-contents</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="relatedlink-target" type="ComboBox">
                    <label>Åpne i</label>
                    <custom-text>relatedlink-target</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="current">Samme vindu</option>
                        <option value="new">Nytt vindu</option>
                    </config>
                </input>
            </items>
        </item-set>
        <field-set name="Relaterte-artikler">
            <label>Relaterte artikler</label>
            <items>
                <input name="relatedarticles-heading" type="TextLine">
                    <label>Listeoverskrift</label>
                    <custom-text>contentdata/relatedarticles-heading</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="relatedarticles" type="ContentSelector">
                    <label>Relaterte artikler</label>
                    <custom-text>contentdata/relatedarticles</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="0" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Metadata">
            <label>Metadata</label>
            <items>
                <input name="meta-title" type="TextLine">
                    <label>Meta-tittel</label>
                    <custom-text>contentdata/meta-title</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
                <input name="meta-description" type="TextArea">
                    <label>Meta-beskrivelse</label>
                    <custom-text>contentdata/meta-description</custom-text>
                    <immutable>false</immutable>
                    <indexed>false</indexed>
                    <maximize>true</maximize>
                    <occurrences maximum="1" minimum="0"/>
                    <config/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
